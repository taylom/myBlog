<main id="content">
  <div class="container-fluid">

    <div class="container">
      <div class="row">
        <div class="col-12">
          <h1>Current Articles</h1>
          <p class="text-large">These are the current articles. You can add a <a href="/articles/new">new article</a>.</p>
        </div>
      </div>
    </div>
</main>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><button class="btn btn-primary"><%= link_to 'Show', article_path(article) %></button></td>
      <td><button class="btn btn-primary"><%= link_to 'Edit', edit_article_path(article) %></button></td>
      <td><button class="btn btn-primary"><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></button></td>
    </tr>
  <% end %>

  <% if @articles.blank? %>
  <div class="error-summary">
      <div class="error-title">Oops...</div>
      <div class="error-description">There are no articles containing the term <%= params[:search] %>. Please try a different search.</div>
  </div>
  <% end %>
</table>
